<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
      <span title="<a id='myCard' class='embedly-card embedly-tooltips' href= '<%= link.url %> ' ><%= link.title %></a>" class="tooltip-link"><%= link_to link.title, link %></span><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.name %></small>
      <script>
      $(function() {
        $( ".tooltip-link" ).tooltip({
          content: function () {
            return $(this).prop('title');
            },
          tooltipClass: "custom-tooltip-styling",
          track: true
          });
          var a = document.getElementById('#myCard');
          embedly('card', {
            selector: 'a.embed',
            chrome: '1',
            controls: '0'
          });
        });
      </script> 
    </h2>
    <div class="btn-group upvotestyle">
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm upvotestyle" do %>
        <span class="glyphicon glyphicon-thumbs-up upvotestyle"></span>
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-down downvotestyle">
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>